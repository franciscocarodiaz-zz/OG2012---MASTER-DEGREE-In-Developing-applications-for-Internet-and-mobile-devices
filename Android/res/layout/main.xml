<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewMain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/LinearLayoutMainPass"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextViewMainPass"
            style="@style/CodeFontGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pass"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/EditTextDialogMainPass"
            android:layout_width="fill_parent"
            android:layout_height="30sp"
            android:inputType="textPassword"
            android:textSize="12sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    
    <Button
        android:id="@+id/ButtonExitMain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="34dp"
        android:text="@string/exit"
        android:textAppearance="@style/CodeFontButton"
        android:textColor="@color/colorNo"
        android:width="100sp" />

    <Button
        android:id="@+id/ButtonEnterMain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ButtonExitMain1"
        android:layout_alignBottom="@+id/ButtonExitMain1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:text="@string/enter"
        android:textAppearance="@style/CodeFontButton"
        android:textColor="@color/colorYes"
        android:width="100sp" />

    <LinearLayout
        android:id="@+id/LinearLayoutMainUser"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LinearLayoutMainPass"
        android:layout_alignLeft="@+id/LinearLayoutMainPass"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextViewMainUser"
            style="@style/CodeFontGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/EditTextDialogMainUser"
            android:layout_width="fill_parent"
            android:layout_height="30sp"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>